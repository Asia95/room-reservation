<div class="container" id="sign-up-form">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2 class="text-center">Forgot your password?</h2>
        <%= bootstrap_form_for(resource, 
                               :as => resource_name, 
                               :url => password_path(resource_name)) do |f| %>
          <%= f.text_field :email, 
                     placeholder: 'email',
                     autofocus: true,
                     autocomplete: "email", 
                     class: 'form-control' %>
          <%= f.submit 'Send me reset password instructions', class: 'btn form-control' %>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
