<!DOCTYPE html>
<html>
  <head>
    <title>Room Reservation</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
  </head>

  <body class="sidebar-collapse skin-blue-light">
    <div class="wrapper">  
      <%= render 'layouts/navigation/layout'%>    
      <div class="content-wrapper">
        <div class="container">
          <% unless flash.empty? %>
            <script type="text/javascript">
                <% flash.each do |f| %>
              <% type = f[0].gsub('alert', 'error').gsub('notice', 'info') %>
                    toastr['<%= (type == 'danger' ? 'error' : type) %>']('<%= f[1] %>', '<%= type %>');
                <% end %>
            </script>
          <% end %>
            <%= yield %>
        </div>        
      </div>
      <%= render 'layouts/navigation/footer' %>
    </div>
  </body>
</html>
